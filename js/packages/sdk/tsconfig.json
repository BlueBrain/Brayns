{
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./src",
        "noEmit": false,
        "allowSyntheticDefaultImports": true, // Lodash
        "downlevelIteration": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "json-schema",
            "lodash"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "files": [
        "./src/index.ts"
    ]
}
