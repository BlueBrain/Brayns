{
    "extends": [
        "tslint-react",
        "../../tslint.json"
    ],
    "rules": {
        "no-implicit-dependencies": false,
        // JSX
        // https://github.com/palantir/tslint-react
        "jsx-boolean-value": {
            "options": "never"
        },
        "no-submodule-imports": {
            "options": [
                "@material-ui",
                "raf",
                "rxjs"
            ]
        }
    }
}
